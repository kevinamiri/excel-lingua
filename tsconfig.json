{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "m.js"
  ],
  "exclude": [
    "node_modules"
  ]
}